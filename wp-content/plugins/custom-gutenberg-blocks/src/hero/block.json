{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "custom-block/hero",
	"version": "0.1.0",
	"title": "Hero Section",
	"category": "custom-blocks",
	"icon": "cover-image",
	"description": "Flexible Hero Section mit optionalem Bild, Text, Button & Farbvariante.",
	"keywords": ["hero", "banner", "image", "headline", "cta"],
	"attributes": {
	  "title": {
		"type": "string",
		"default": ""
	  },
	  "description": {
		"type": "string",
		"default": ""
	  },
	  "imageUrl": {
		"type": "string",
		"default": ""
	  },
	  "buttonText": {
		"type": "string",
		"default": ""
	  },
	  "buttonUrl": {
		"type": "string",
		"default": ""
	  },
	  "variant": {
		"type": "string",
		"default": "light"
	  }
	},
	"supports": {
	  "html": false,
	  "align": ["wide", "full"]
	},
	"textdomain": "custom-gutenberg-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
  }
